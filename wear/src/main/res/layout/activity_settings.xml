<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watch_view2"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.format.gesturelauncher.Setting"
    tools:deviceIds="wear"
    android:background="@color/dark_grey">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_box="left|right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/diag_content_top_padding_round"
            android:paddingBottom="@dimen/diag_content_top_padding_round"
            android:orientation="vertical"
            android:paddingLeft="6dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:text="@string/settings_general"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"

                android:visibility="visible" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="10dp"
                android:text="@string/settings_show_quick_launcher" />

            <Switch
                android:id="@+id/switchVib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="10dp"
                android:text="@string/settings_vibration" />

            <LinearLayout
                android:id="@+id/settings_quicklauncher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp"
                    android:text="@string/settings_quick_launcher_style"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"

                    android:visibility="visible" />

                <Switch
                    android:id="@+id/switchLongpress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:padding="10dp"
                    android:text="@string/settings_long_press_disable" />

                <Switch
                    android:id="@+id/switchNarrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="@string/settings_shorter_length" />

                <Switch
                    android:id="@+id/switchWide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="@string/settings_wider_width" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp"
                    android:text="@string/settings_quick_launcher_location"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"

                    android:visibility="visible" />

                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checkedButton="@+id/radioRight"
                    android:paddingStart="5dp">

                    <RadioButton
                        android:id="@+id/radioRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/settings_right_edge" />

                    <RadioButton
                        android:id="@+id/radioLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/settings_left_edge" />

                    <RadioButton
                        android:id="@+id/radioTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/settings_top_edge" />

                    <RadioButton
                        android:id="@+id/radioBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/settings_bottom_edge" />

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:text="@string/settings_gesture_recognition_accuracy"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"

                android:visibility="visible" />

            <Button
                android:id="@+id/buttonAllge"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_weight="1"
                android:text="@string/settings_restore_to_default"

                android:textColor="@android:color/holo_blue_bright"
                app:layout_box="all" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:text="@string/settings_clear_gestures"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"

                android:visibility="visible" />

            <Button
                android:id="@+id/buttonRolad"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_weight="1"
                android:text="@string/settings_reload_gestures"

                android:textColor="@color/red"
                app:layout_box="all" />

            <TextView
                android:id="@+id/textViewVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Version_Warning"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>

</android.support.wearable.view.BoxInsetLayout>
